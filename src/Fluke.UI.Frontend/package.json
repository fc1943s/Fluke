  "repository": {
    "type": "git",
    "url": "https://github.com/fc1943s/fluke.git"
  },
  "author": "fc1943s",
  "license": "MIT",
  "homepage": ".",
  "private": true,
  "electronWebpack": {
    "title": true,
    "main": {
      "sourceDirectory": "../Fluke.UI.Electron.Main",
      "webpackConfig": "../Fluke.UI.Electron.Main/webpack.additions.main.js"
    },
    "renderer": {
      "sourceDirectory": "../Fluke.UI.Electron.Renderer",
      "webpackConfig": "../Fluke.UI.Electron.Renderer/webpack.additions.renderer.js"
    }
  },
  "scripts": {
    "build:fable": "dotnet tool restore && dotnet paket install && dotnet fable",
    "build:react": "cross-env CI= INLINE_RUNTIME_CHUNK=false EXTEND_ESLINT=true SKIP_PREFLIGHT_CHECK=true react-app-rewired build",
    "watch:frontend-build": "dotnet fable watch",
    "watch:frontend": "cross-env HTTPS=true EXTEND_ESLINT=true BROWSER=none FAST_REFRESH=true PORT=33922 SKIP_PREFLIGHT_CHECK=true react-app-rewired start",
    "watch": "concurrently \"yarn:watch:*\"",
    "enable-build-watch":"yarn cra-build-watch",
    "disable-build-watch":"yarn --check-files",
    "build": "yarn build:fable && yarn build:react",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --rootDir . --runInBand --env=jest-environment-jsdom-sixteen --testNamePattern=",
    "cypress-install": "cypress install --force",
    "cypress": "cypress open",
    "cypress-watch": "concurrently \"yarn:watch\" \"yarn:cypress\"",
    "cypress-run": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 cypress run --headed",
    "frontend-serve": "cross-env PORT=33922 serve build",
    "test-watch": "yarn test --watchAll",
    "test-build-watch": "concurrently \"yarn:watch:frontend-build\" \"yarn:test-watch\"",
    "postinstall": "node -e \"if (true || process.env.GITHUB_JOB) { console.log('CI Build'); } else { require('child_process').spawn('patch-package', { shell: true, stdio: 'inherit' }); }\"",

    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "npm run compile && electron-builder"
  },
